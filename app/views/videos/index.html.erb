<div class="container">
  <div class="">
    <h1 class="text-center">video list</h1>
    <div class="col-md-12">
      <%= link_to root_path ,:class => "btn btn-default" do %>
      <span class="glyphicon glyphicon-home"></span> 首頁
      <% end %>
      <%= link_to  videos_path ,:class => "btn btn-primary new-video-btn" do %>
      <span class="glyphicon glyphicon-plus"></span> 新增
      <% end %>
    </div>
    <div class="col-md-12">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
    </div>
    <div class="video-form col-md-12">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @video, :html => {:class => 'form-horizontal'} do |f| %>
        <%= render :partial => 'form', :locals => { :f => f} %>
        <% end %>
      </div>
    </div>
    <%= paginate @videos %>
    <div class="col-md-12">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td> # </td>
            <td> Title</td>
            <td> URL </td>
            <td> 狀態 </td>
            <td> # </td>
          </tr>
        </thead>
        <tbody>
          <% @videos.each do |v| %>
          <tr>
            <td> # </td>
            <td><%= v.name %></td>
            <td><%= v.url %></td>
            <td>
              <% if v.status =='public' %>
              <span class="glyphicon glyphicon-check"></span> 發布中
              <% else %>
              <span class="glyphicon glyphicon-paperclip"></span> 預覽
              <% end %>
            </td>
            <td>
              <!-- <%= link_to "詳細", video_path(v) %> -->
              <%= link_to videos_path( :id => v.id), :class => "btn btn-primary btn-sm" do %>
              <span class="glyphicon glyphicon-cog"></span> 編輯
              <% end %>
              <%= link_to video_path(v), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger btn-sm " do %>
              <span class="glyphicon glyphicon-remove"></span> 刪除
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">

</script>